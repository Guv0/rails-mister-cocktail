<div class="wrapper">
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.6) 50%), url('https://static.pexels.com/photos/4784/alcohol-bar-party-cocktail.jpg');">
  <div class="banner-content">

   <h1 class='text-center'>Cocktails</h1>


    <div class="container text-center">
      <div class="row">
        <% @cocktails.each do |cocktail| %>
        <div class="card-cocktail">
          <%= link_to cocktail.name, cocktail_path(cocktail), class: "btn-g" %>
        <% end %>
        </div>
      </div>
    </div>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn-g" %>
  </div>
</div>
</div>
