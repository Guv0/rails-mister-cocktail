<h1><%= @cocktail.name %></h1>
<h4>Ingredients:</h4>



<ul>
  <% @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %> - <%= dose.description %></li>
  <%= link_to "Delete", dose_path(dose), method: :delete, class: "btn-medium" %>
  <% end %>
</ul>

<%= link_to "Add dose", new_cocktail_dose_path(@cocktail), class: "btn-medium" %>


<%= link_to "Return to cocktails", cocktails_path(@cocktail), class: "btn-medium" %>
