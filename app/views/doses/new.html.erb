<div class="wrapper">
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.6) 50%), url('https://static.pexels.com/photos/4784/alcohol-bar-party-cocktail.jpg');">
    <div class="banner-content">
      <h1>Add ingredient</h1>

      <div class="container">
        <%= simple_form_for [@cocktail, @dose] do |d| %>
          <%= d.input :ingredient_id, collection: Ingredient.all %>
          <%= d.input :description %>
          <%= d.submit %>
          <%end%>
      </div>
    </div>
  </div>
</div>
